@model IEnumerable<MvcRatings.Models.User>

<h2>Users</h2>

<table class="table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New User</a>